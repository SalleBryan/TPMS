<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tpms.ui.controller.LoginController"
            prefWidth="400" prefHeight="250">

    <children>
        <Label text="TPMS Login" layoutX="160" layoutY="20" style="-fx-font-size: 18px;"/>
        <Label text="Username:" layoutX="50" layoutY="80"/>
        <TextField fx:id="usernameField" layoutX="130" layoutY="75" prefWidth="200"/>
        <Label text="Password:" layoutX="50" layoutY="120"/>
        <PasswordField fx:id="passwordField" layoutX="130" layoutY="115" prefWidth="200"/>
        <Button fx:id="loginButton" text="Login"
                layoutX="160" layoutY="170" prefWidth="80"/>
    </children>
</AnchorPane>
